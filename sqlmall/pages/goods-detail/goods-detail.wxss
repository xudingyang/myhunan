page {
  background: #f5f5f5;
  padding-bottom: 93rpx;
}

.info-wrapper {
  background: #fff;
}

.info-wrapper swiper {
  height: 750rpx;
  width: 750rpx;
}

.info-wrapper swiper-item {
  width: 100%;
  height: 100%;
}

.goods-img {
  width: 100%;
  height: 100%;
}

.goods-name {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  max-height: 80rpx;
  line-height: 40rpx;
  padding: 0 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
}

.activity {
  padding: 0 20rpx;
  max-height: 80rpx;
  line-height: 40rpx;
  color: #f23030;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-price {
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 30rpx;
  color: #f23030;
  font-size: 40rpx;
}
.goods-price text {
  font-size: 28rpx;
  margin-right: 4px;
}
.goods-size {
  margin-top: 30rpx;
  background: #fff;
}
.size-title {
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  position: relative;
  height: 80rpx;
  border-bottom: 1rpx solid #efefef;
}
.size-title > text:nth-of-type(1) {
  font-size: 32rpx;
  flex: 0 0 80rpx;
}
.size-title > text:nth-of-type(2) {
  font-size: 30rpx;
  flex: 1;
  padding-right: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.size-title > view {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  width: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.size-title > view > image {
  width: 30rpx;
  height: 30rpx;
}
.size-con {
  padding: 20rpx;
}
.size-item {
  font-size: 28rpx;
  display: flex;
}
.size-item > view:nth-of-type(1) {
  color: #838383;
  min-width: 80rpx;
  font-size: 26rpx;
}
.size-item > view:nth-of-type(2) {
  flex: 1;
  margin-left: 10rpx;
  overflow: hidden;
}
.size-item-text {
  float: left;
  margin-right: 10px;
  margin-bottom: 8px;
  background: #f3f2f8;
  padding: 4px 8px;
  border-radius: 6rpx;
}
.size-item-active {
  background: #f23030;
  color: #fff;
}
.goods-count {
  display: flex;
  align-items: center;
  padding: 0 20rpx 20rpx 20rpx;
}
.goods-count > text {
  color: #838383;
  min-width: 80rpx;
  font-size: 26rpx;
}
.add-btn-con {
  margin-left: 8px;
  display: flex;
  border-radius: 6rpx;
  border: 1rpx solid #cfcfcf;
  height: 60rpx;
}
.add-btn-con image {
  width: 50rpx;
  height: 50rpx;
}
.jian-hao,
.jia-hao {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 60rpx;
  height: 60rpx;
}
.num {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 100%;
  border-right: 1rpx solid #cfcfcf;
  border-left: 1rpx solid #cfcfcf;
  font-size: 30rpx;
}
.goods-info {
  margin-top: 30rpx;
  background: #fff;
}
/* 规格参数标题  */
.info-title {
  padding-left: 20rpx;
  font-size: 32rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #efefef;  
}
.info {
  margin-top: 20rpx;
}
/* 包装清单 标题  */
.info > view:nth-of-type(1) {
  font-size: 30rpx;
  height: 50rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}
/* 包装清单 标题文字  */
.info > view:nth-of-type(1) > text:nth-of-type(2) {
  font-size: 28rpx;
  color: #838383;
  flex: 0 0 160rpx;
  width: 160rpx;
  text-align: center;
} 
/* 包装清单 标题分割线  */
.space-line {
  flex: 1;
  height: 1px;
  background: #efefef;
}
/* 包装清单 正文内容  */
.qingdan {
  height: 50rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  padding: 0 20rpx;    
}
.goods-canshu {
  padding: 0 20rpx;
  font-size: 26rpx;
}
.goods-canshu > view:first-child {
  border-top: 1rpx solid #efefef;
}
.goods-canshu > view {
  display: flex;
  align-items: center;
  height: 50rpx;
  border-bottom: 1rpx solid #efefef;
  border-left: 1rpx solid #efefef;
  border-right: 1rpx solid #efefef;
}
.goods-canshu > view > text:nth-of-type(1) {
  border-right: 1rpx solid #efefef;
  flex: 0 0 200rpx;
  text-align: center;
  color: #838383;  
}
.goods-canshu > view > text:nth-of-type(2) {
  flex: 1;
  text-align: center;
}
.goods-tupian {
  padding: 20rpx 0;
  text-align: center;
}
.goods-tupian image {
  width: 100%;
  margin-top: 10rpx;
}
.control-wrapper {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 92rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
}
.ctl-lf {
  height: 100%;
  display: flex;
}
.lfb {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 104rpx;
  height: 100%;
  font-size: 22rpx;
  color: #999;
  position: relative;  
}
.lfb image {
  margin-top: 10rpx;
  width: 44rpx;
  height: 44rpx;
}
.lfb text {
  height: 36rpx;
  line-height: 36rpx;
}
.lfb text.collected {
  color: #ff9600;
}
.cart-count {
  position: absolute;
  top: 6rpx;
  right: 15rpx;
  height: 26rpx;
  line-height: 26rpx;
  padding: 0 6rpx;
  font-size: 20rpx;
  border-radius: 10rpx;
  background: #f23030;
  color: #fff;
}
.trl-rg {
  height: 100%;
  display: flex;
}
.rgb {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 219rpx;
  color: #fff;
  height: 100%;
  font-size: 32rpx;
}

.rgb:nth-last-of-type(1) {
  background: #ff9600;
}

.rgb:nth-last-of-type(2) {
  background: #f23030;
}
.sold-out {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 219rpx;
  height: 100%;
  font-size: 32rpx;
  background: #aaa;
  color: #eee;
}
.sold-out1 {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 219rpx;
  height: 100%;
  font-size: 32rpx;
  background: #eee;
  color: #888;
}