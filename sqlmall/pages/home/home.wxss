page {
  background: #f5f5f5;
  padding-bottom: 15px;
}

.carousel {
  position: relative;
  height: 360rpx;
  padding: 5rpx;
  background: #cb004d;
}

swiper {
  width: 100%;
  height: 100%;
}

swiper image {
  height: 100%;
  width: 100%;
}

.search {
  position: absolute;
  display: flex;
  align-items: center;
  top: 14rpx;
  left: 30rpx;
  right: 30rpx;
  border-radius: 16px;
  background: rgba(255, 255, 255, 0.8);
  overflow: hidden;
}

.search-icon {
  margin-left: 16px;
  width: 20px;
  height: 20px;
}

.search text {
  margin-left: 8px;
  height: 32px;
  line-height: 32px;
  font-size: 15px;
  color: #999;
}

/* 轮播图下的类别 */

.choose-wrapper {
  background: #fff;
}

.ch-box {
  height: 200rpx;
  display: flex;
}

.ch-box-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center; 
  height: 100%;
}

.ch-box-item image {
  width: 100rpx;
  height: 100rpx;
}

.ch-box-item text {
  margin-top: 6px;
  font-size: 26rpx;
}

/* 活动专题 */

.topic-wrapper {
  margin-top: 15px;
  background: #fff;
}

.topic-title {
  padding: 20rpx;
  font-size: 30rpx;
}

.topic-con {
  overflow: hidden;
  white-space: nowrap;
}

.top-banner-img {
  width: 100%;
  height: 290rpx;
}

.topic-con scroll-view {
  width: 100%;
  height: 540rpx;
  padding: 20rpx 30rpx;
}

.left-img-con {
  display: inline-block;
  vertical-align: top;
  width: 290rpx;
  height: 100%;
}

.lf-con {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.lf-con view:nth-child(1) {
}

.lf-con view:nth-child(1) image {
  width: 250rpx;
  height: 250rpx;
}

.lf-con view:nth-child(2) {
  margin-top: 10px;
  width: 100%;
  font-size: 30rpx;
  color: #444;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.lf-con view:nth-child(3) {
  margin-top: 4px;
  font-size: 28rpx;
}

.lf-con .curr-price {
  color: #666;
  font-size: 30rpx;
}

.lf-con .activity-name {
  margin-left: 4px;
  font-size: 28rpx;
  color: #f23030;
}

.right-img-con {
  display: inline-block;
  width: 820rpx;
  height: 100%;
}

.right-img-con-bd {
  width: 100%;
  height: 258rpx;
  display: flex;
}

.right-img-con-bd:first-child {
  margin-bottom: 20rpx;
}

.rg-con-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 190rpx;
  height: 100%;
  padding: 0 20rpx;
  border: 1px solid #efefef;
  margin-left: 20rpx;
}

.rg-con-item view:nth-child(1) {
  width: 140rpx;
  height: 140rpx;
  padding-top: 20rpx;
}

.rg-con-item image {
  width: 100%;
  height: 100%;
}

.rg-con-item view:nth-child(2) {
  margin-top: 10rpx;
  width: 100%;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 26rpx;
  color: #666;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.rg-con-item view:nth-child(3) {
  height: 30rpx;
  line-height: 30rpx;
}

.rg-con-item .curr-price {
  color: #666;
  font-size: 26rpx;
}

.rg-con-item .activity-name {
  margin-left: 4px;
  font-size: 22rpx;
  color: #f23030;
}

.rg-item-last {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 190rpx;
  height: 100%;
  padding: 0 20rpx;
  border: 1px solid #efefef;
  margin-left: 20rpx;
}

.rg-item-last view {
  font-size: 58rpx;
  font-weight: bold;
}

.rg-item-last text {
  margin-top: 6px;
  font-size: 26rpx;
  color: #666;
}

.loading-more,
.loading-complete {
  height: 80rpx;
  line-height: 80rpx;
  background: #f5f5f5;
  font-size: 32rpx;
  text-align: center;
  color: #838383;
}