page {
  background: #f5f5f5;
  padding-bottom: 15px;
  padding-top: 1rpx;
}
.wrapper {
  margin-bottom: 30rpx;
  background: #fff;
  padding: 20rpx;
}
.wrapper1 {
  padding: 20rpx 0;
}
.item {
  font-size: 30rpx;
  margin-bottom: 2px;
}
.item > text {
  color: #838383;
  margin-right: 8px;
}
.state {
  color: #f23030;
}
.pay-btn {
  margin-top: 10px;
  width: 100%;
  height: 90rpx;
  background: #f23030;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  border-radius: 6px;
  letter-spacing: 1px;
}
.cancel-order {
  margin-top: 12px;
  width: 100%;
  height: 90rpx;
  border: 1px solid #cfcfcf;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  border-radius: 6px;
  letter-spacing: 1px;
}
.item1 {
  display: flex;
  font-size: 30rpx;
  margin-bottom: 3px;
}
.item1 > text:nth-of-type(1) {
  color: #838383;
  flex: 0 0 150rpx;
}
.money {
  color: #f23030;
  margin-right: 4px;
}
.person-name {
  margin-right: 8px;
}

.goods {
  background: #fff;
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.gift-goods-list .goods {
  background: #efefef;
}
.goods > image {
  flex: 0 0 150rpx;
  width: 150rpx;
  height: 150rpx;
}
.goods-info {
  margin-left: 10px;
  flex: 1;
}
.goods-name {
  line-height: 34rpx;
  max-height: 68rpx;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-size {
  margin: 4px 0;  
  width: 400rpx;
  font-size: 28rpx;
  color: #888;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.goods-price {
  font-size: 32rpx;
  color: #f23030;
  position: relative;
}
.goods-price > text:nth-of-type(1) {
  font-size: 26rpx;
  margin-right: 4px;
}
.goods-count {
  position: absolute;
  right: 30rpx;
  top: 0;
  color: #666;
  font-size: 32rpx;
}
.item3 {
  font-size: 30rpx;
  display: flex;
  height: 60rpx;
  align-items: center;
  justify-content: space-between;
}
.item3 > text {
  color: #333;
}
.item3 > view {
  color: #f23030;
}
.item3 > view > text {
  margin: 0 4px;
}
.item4 {
  height: 80rpx;
  font-size: 34rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.item4 > view {
  margin-left: 8px;
  color: #f23030;
}
.item4 > view > text {
  margin-right: 3px;
}


.pay-modal {
  position: fixed;
  z-index: 1111;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .5);
}
.pay-modal > view {
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  margin-left: -330rpx;
  width: 660rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 20rpx 40rpx 40rpx 20rpx;
}
.pay-modal-title {
  font-size: 30rpx;
  text-align: center;
}
.pay-modal-wx {
  margin-top: 10px;
  width: 100%;
  height: 90rpx;
  background: #1aad19;
  color: #fff;
  text-align: center;
  line-height: 90rpx;
  border-radius: 4px;
  font-size: 32rpx;
}
.pay-modal-card {
  margin-top: 20px;
  width: 100%;
  height: 90rpx;
  background: #d8daff;
  color: #7a87c8;
  text-align: center;
  line-height: 90rpx;
  border-radius: 4px;
  font-size: 32rpx;  
}
.pay-modal-title image {
  position: absolute;
  width: 56rpx;
  height: 56rpx;
  right: 8rpx;
  top: 8rpx;
}
.pay-panel {
  position: fixed;
  z-index: 2222;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, .5);
}
.count-panel {
  overflow: hidden;
  margin: 80rpx auto;
  border-radius: 6px;
  width: 500rpx;
  background: #fff;
}
.pay-title {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  position: relative;  
  border-bottom: 1rpx solid #efefef;
}
.pay-title image {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.pay-money {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 50rpx;
  border-bottom: 1rpx solid #efefef;
}
.pay-money > text {
  font-size: 30rpx;
  margin-right: 6px;
}
.pay-pwd {
  height: 120rpx;
  display: flex;
  align-items: center;
}
.pay-pwd text {
  padding-left: 20rpx;
  flex: 0 0 100rpx;
  font-size: 30rpx;
}
.pay-pwd input {
  padding-left: 20rpx;
  width: 340rpx;
  height: 70rpx;
  background: #efefef;
  border-radius: 6rpx;
}
.pay-panel button {
  border-radius: 0;
  background: #1aad19;
  color: #fff;
  font-size: 36rpx;
  letter-spacing: 2px;
}