page {
  background: #f5f5f5;
  height: 100%;
}
.item {
  margin-top: 20rpx;
  background: #fff;
  height: 100rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.reason {
  color: #838383;
}
.time {
  font-size: 28rpx;
}
.content {
  margin-top: 4px;
  font-size: 26rpx;
}
.reason text {
  margin-right: 5px;
}
.score-jia {
  color: #f23030;
}
.score-jian {
  color: #19c017;
}

.loading-more,
.loading-complete {
  height: 80rpx;
  line-height: 80rpx;
  background: #f5f5f5;
  font-size: 32rpx;
  text-align: center;
  color: #838383;
}