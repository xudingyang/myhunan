page {
  background: #f5f5f5;
}

.goods-list {
  padding-top: 10rpx;
  overflow: hidden;  
}
.empty-goods {
  margin: 20rpx 0;
  height: 200rpx;
  font-size: 30rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
}
.invalid-item,
.item {
  float: left;
  width: 370rpx;
  background: #fff;
  margin-bottom: 10rpx;
  padding-bottom: 20rpx;
}
.invalid-item:nth-of-type(2n-1),
.item:nth-of-type(2n-1) {
  margin-right: 10rpx;
}
.invalid-item > image,
.item > image {
  width: 370rpx;
  height: 370rpx;
}
.invalid-item > text,
.item > text {
  display: block;
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
  white-space: nowrap;
  font-size: 28rpx;
  padding: 0 3px;
}
.delte-invalid,
.item > view {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 4px;
}
.money-con {
  font-size: 40rpx;
  color: #f23030;
}
.money-con > text {
  font-size: 30rpx;
  margin-right: 3px;
}
.add-cart {
  height: 80rpx;
  width: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;  
}
.add-cart > image {
  width: 40rpx;
  height: 40rpx;
}

/* 失效商品列表  */
.invalid-goods-list {
  margin-top: 20px;
  height: 400rpx;
}
.invalid-goods-list > view:nth-of-type(1) {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  font-size: 30rpx;
  padding: 0 20rpx;
  height: 80rpx;
}
.clear-invalid {
  color: #f23030;
}
.invalid-goods-list > view:nth-of-type(2) {
  margin-top: 10rpx;
  overflow: hidden;  
}
.invalid-item {
  position: relative;
}
.invalid-bg {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  background: rgba(17, 17, 17, .4);
  color: #cecece;
  font-size: 60rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.invalid-bg2 {
  z-index: 1000;
}
.del-inv-btn {
  background: #ff3600;
  height: 200rpx;
  width: 200rpx;
  border-radius: 50%;
  font-size: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}