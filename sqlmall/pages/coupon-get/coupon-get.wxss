page {
  background: #f5f5f5;
  padding-bottom: 110rpx;
}
.empty {
  position: relative;
  top: 400rpx;
  width: 100%;
  text-align: center;
  color: #aaa;
  font-size: 32rpx;
}
.coupon-list {
  padding: 0 20rpx;
}

.coupon {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
  border-radius: 6rpx;
  box-shadow: 0 0 4rpx rgba(0,0,0,.1)
}

.coupon > image {
  flex: 0 0 160rpx;
  width: 160rpx;
  height: 160rpx;
}

.coupon > .counpon-info {
  flex: 1;
  margin-left: 10px;
}

.title {
  height: 60rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.time {
  margin-top: 10rpx;
  height: 30rpx;
  font-size: 28rpx;
  color: #838383;  
}
.time > text {
  margin-right: 6px;
}
.money-con {
  margin-top: 10rpx;
  height: 50rpx;
  color: #74d2d4;
  display: flex;
  align-items: flex-end;
}
.money {
  font-size: 40rpx;
}
.money text {
  font-size: 26rpx;
  margin-right: 4px;
}
.condition {
  font-size: 30rpx;
  margin-left: 10px;
}

.get-btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background: #f23030;
  color: #fff;
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  letter-spacing: 1px;
}
