page {
  background: #f5f5f5;
  padding-top: 1rpx;
  padding-bottom: 100rpx;
}

.title {
  height: 80rpx;
  font-size: 32rpx;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
  background: #fff;
  margin-bottom: 20rpx;
}

.title text {
  color: #f23030;
}

.goods {
  display: flex;
  height: 220rpx;
  background: #fff;
  padding: 0 20rpx;
  position: relative;
  z-index: 20;
}

.choose-btn {
  flex: 0 0 50rpx;
  width: 50rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

.choose-btn image {
  width: 50rpx;
  height: 50rpx;
}

.info {
  margin-left: 10rpx;
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
}

.goods-icon {
  flex: 0 0 160rpx;
  width: 160rpx;
  height: 160rpx;
}

.info > view {
  flex: 1;
  margin-left: 10rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.name-size {
  box-sizing: border-box;
  width: 100%;
}

.goods-name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  line-height: 34rpx;
}

.goods-size {
  margin-top: 6px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 34rpx;
  width: 380rpx;
  color: #838383;
  font-size: 26rpx;
}

.confirm-btn {
  position: fixed;
  z-index: 99;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background: #f23030;
  color: #fff;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
