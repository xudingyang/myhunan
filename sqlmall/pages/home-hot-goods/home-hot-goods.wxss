page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 搜索结果列表 */
.search-goods-result {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.sort-reason-wrapper {
  flex: 0 0 80rpx;
  display: flex;
  align-items: center;
  height: 80rpx;
  border-bottom: 1px solid #efefef;
}

.sort-reason-wrapper > view {
  flex: 1;
  display: flex;
  justify-content: center;
  font-size: 30rpx;
  color: #333;
}

.sort-reason-wrapper .active {
  color: #f23030;
}

.price-icon {
  margin-left: 3px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.price-icon image {
  width: 30rpx;
  height: 20rpx;
}

.sort-shaixuan image {
  margin-left: 3px;
  margin-top: 4rpx;
  width: 36rpx;
  height: 36rpx;
}

/*  商品列表  */

.goods-list {
  flex: 1;
  height: 0;
}

.goods-item {
  display: flex;
  height: 250rpx;
}

.godds-item-img {
  flex: 0 0 240rpx;
  height: 240rpx;
  width: 240rpx;
}

.goods-icon {
  width: 100%;
  height: 100%;
}

.godds-item-info {
  flex: 1;
  height: 100%;
  border-bottom: 1rpx solid #efefef;
  padding: 0 8px;
}

.goods-name {
  margin-top: 6px;
  height: 80rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
}

.goods-level {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #838383;
}

.sale-activity {
  margin-top: 12rpx;
  font-size: 28rpx;
  overflow: hidden;
}

.activity-name {
  float: left;
  padding: 0 3PX;
  height: 26rpx;
  line-height: 26rpx;
  font-size: 20rpx;
  border: 1rpx solid #ff5101;
  color: #ff5101;
  border-radius: 6rpx;
  margin-right: 4px;
}

.activity-name:nth-of-type(2) {
  color: #ff8a1e;
  border: 1rpx solid #ff8a1e;
}

.activity-name:nth-of-type(3) {
  color: #ffce61;
  border: 1px solid #ffce61;
}

.price-count {
  margin-top: 6rpx;
  position: relative;
}

.goods-price {
  display: inline-block;
  color: #f23030;
  font-size: 38rpx;
}

.rmb-symbol {
  font-size: 26rpx;
  margin-right: 4rpx;
}

.goods-sale-count {
  display: inline-block;
  margin-left: 10px;
  font-size: 24rpx;
  color: #aaa;
}

.add-cart-con {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
}

.add-cart-icon {
  align-self: flex-end;
  width: 40rpx;
  height: 40rpx;
}

.loading-more,
.loading-complete {
  height: 80rpx;
  line-height: 80rpx;
  background: #f5f5f5;
  font-size: 32rpx;
  text-align: center;
  color: #838383;
}
.shaixuan-modal-wrapper {
  position: fixed;
  z-index: 888;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background: rgba(0,0,0,.4);
}
.shaixuan-con {
  float: right;
  width: 600rpx;
  height: 100%;
  background: #fff;
}
.shaixuan-title {
  height: 80rpx;
  font-size: 34rpx;
  line-height: 80rpx;
  text-align: center;
  border-bottom: 1rpx solid #efefef;
}
.shaixuan-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #efefef;
}
.shaixuan-item:last-child {
  padding-bottom: 90rpx;
}
.item-title {
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  padding-right: 30rpx;
}
.item-title > text:nth-of-type(2) {
  color: #f23030;
}
.item-con {
  margin-top: 3px;
  overflow: hidden;
}
.item-con text {
  float: left;
  width: 220rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-right: 8px;
  margin-bottom: 6px;
  font-size: 28rpx;
  text-align: center;
  background: #f7f7f7;
}
.item-con text.shaixuan-item-active {
  background: #f23030;
  color: #fff;
}
.confirm-btn {
  position: fixed;
  bottom: 0;
  right: 0;
  height: 80rpx;
  background: red;
  width: 600rpx;
  display: flex;
}
.confirm-btn > view {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f7f7f7;
  font-size: 30rpx;
}
.confirm-btn > view:nth-of-type(2) {
  background: #f23030;
  color: #fff;
}