page {
  background: #f5f5f5;
  height: 100%;
}
.empty {
  font-size: 30rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.empty text {
  color: #838383;
  margin-bottom: 20px;
}
.empty view {
  padding: 4rpx 10rpx;
  color: #f23030;
  border: 1rpx solid #f23030;
  border-radius: 10rpx;
}
.goods-wrapper {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.space-box {
  flex: 0 0 100rpx;
  height: 100rpx;
}
scroll-view {
  flex: 1;
  height: 0;
  background: #f5f5f5;
}

.edit {
  height: 90rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid #efefef;
  border-top: 1rpx solid #efefef;
  margin-bottom: 30rpx;
}

.edit-choose {
  height: 100%;
  display: flex;
  align-items: center;
}

.edit-choose image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 4px;
}

.edit-choose text {
  height: 40rpx;
  font-size: 30rpx;
  line-height: 40rpx;
}

.edit-btn {
  color: #f23030;
  font-size: 26rpx;
}

.activity {
  background: #fff;
  border-bottom: 1rpx solid #efefef;
}
.ac-title {
  display: flex;
  justify-content: space-between;
  height: 90rpx;
  align-items: center;
  font-size: 28rpx;  
  padding: 0 20rpx;
}
.default-ac-title {
  background: #f5f5f5;
  height: 40rpx;
  margin: 0 -20rpx;
}
.title-p1 > text:nth-of-type(1) {
  margin-right: 4px;
  color: #f23030;
  padding: 1rpx 6rpx;
  border-radius: 8rpx;
  border: 1rpx solid #f23030;
}
.title-p2 {
  height: 100%;
  display: flex;
  align-items: center;
  color: #f23030;
}
.title-p2 image {
  width: 28rpx;
  height: 28rpx;
}
.goods-outer {
  position: relative;
}
.sold-out {
  background: #eee !important;
}
.gift-goods,
.goods {
  display: flex;
  height: 220rpx;
  background: #fff;
  padding: 0 20rpx;
  position: relative;  
  z-index: 20;
}
.gift-goods {
  height: 200rpx;
}
.del-btn {
  position: absolute;
  z-index: 10;
  right: 0;
  top: 20rpx;
  background: #f23030;
  height: 180rpx;  
  width: 100rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}
.choose-btn-solout {
  flex: 0 0 50rpx;
  width: 50rpx;
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 34rpx;
  color: #999;
}
.choose-btn {
  flex: 0 0 50rpx;
  width: 50rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.choose-btn image {
  width: 50rpx;
  height: 50rpx;
}
.gift-text {
  flex: 0 0 80rpx;
  display: flex;
  align-items: center;
}
.gift-text text {
  padding: 1rpx 6rpx;
  font-size: 24rpx;
  color: #fff;
  background: #bfbfbb;
  border-radius: 4rpx;
}
.info {
  margin-left: 10rpx;
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
}
.goods-icon {
  flex: 0 0 184rpx;
  width: 184rpx;
  height: 184rpx;
}
.gift-goods .goods-icon {
  flex: 0 0 160rpx;
  width: 160rpx;
  height: 160rpx;
}
.info > view {
  flex: 1;
  width: 450rpx;
  margin-left: 10rpx;
  height: 184rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.gift-goods .info > view {
  height: 160rpx;
}
.name-size {
  box-sizing: border-box; 
  width: 100%;
}
.goods-name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  line-height: 34rpx;
  width: 400rpx;
}
.goods-size {
  box-sizing: border-box;
  padding-right: 40rpx;
  width: 370rpx;
  margin-top: 2px;
  font-size: 26rpx;
  color: #838383;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;  
}
.goods-price {
  padding-left: 6px;
  color: #f23030;
  font-size: 38rpx;
}
.goods-price > text {
  margin-right: 4px;
  font-size: 26rpx;
}
.sold-out-mark {
  margin-left: 8px;
  font-size: 30rpx;
}
.add-btn-con {
  position: absolute;
  z-index: 99;
  bottom: 18rpx;
  right: 20rpx;
  display: flex;
  border-radius: 6rpx;
  border: 1rpx solid #cfcfcf;
  height: 50rpx;
}
.add-btn-con image {
  width: 40rpx;
  height: 40rpx;
}
.jian-hao,
.jia-hao {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50rpx;
  height: 50rpx;
}
.num {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 100%;
  border-right: 1rpx solid #cfcfcf;
  border-left: 1rpx solid #cfcfcf;
  font-size: 30rpx;
}


.total-wrapper {
  position: fixed;
  z-index: 200;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  border-top: 1px solid #eee;
}
.total-info {
  padding-left: 20rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.select-all {
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.select-all image {
  margin-right: 4px;
  width: 50rpx;
  height: 50rpx;
}
.money-con {
  margin-left: 8px;
}
.total-money {
  font-size: 32rpx;
}
.discount-money {
  font-size: 26rpx;
  color: #666;
}
.pay-btn {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  background: #f23030;
  color: #fff;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  font-size: 36rpx;
}