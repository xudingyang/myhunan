page {
  background: #f5f5f5;
}
.tip-txt {
  height: 70rpx;
  line-height: 70rpx;
  background: #fad2d5;
  font-size: 32rpx;
  padding: 0 20rpx;
  color: #f76260;
}
.title {
  height: 80rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666;
  border-bottom: 1rpx solid #efefef;
}
.info {
  background: #fff;
}
.info-item {
  display: flex;
  height: 100rpx;
  align-items: center;
  border-bottom: 1rpx solid #efefef;
  padding: 0 20rpx;
  position: relative;
}
.info-item > text {
  flex: 0 0 140rpx;
  width: 140rpx;
  font-size: 34rpx;
  color: #777;
}
.info-item > input {
  width: 400rpx;
  height: 80rpx;
}
.verificationcode {
  position: absolute;
  right: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 8rpx;
  color: #f23030;
  border-radius: 6rpx;
  border: 1px solid #f23030;
  font-size: 28rpx;
  text-align: center;
}
.sending {
  background: #f8f8f8;
  border-color: #afafaf;
  color: #afafaf;
}
.ok-btn {
  margin-top: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 40rpx;
}
.ok-btn button {
  height: 90rpx;
  background: #f23030;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 2px;
  font-size: 36rpx;
  width: 100%;
  border-radius: 8rpx;
}