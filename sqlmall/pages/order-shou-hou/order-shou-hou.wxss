page {
  background: #f5f5f5;
  padding-bottom: 30rpx;
}

.tabs {
  background: #fff;
  display: flex;
  justify-content: center;
  border-bottom: 1rpx solid #e5e5e5;
}
.tab {
  padding: 0 6px;
  height: 79rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  text-align: center;
  border-bottom: 2px;  
}
.tab:last-child {
  margin-left: 30px;
}
.tab.active {
  color: #f23030;
  border-bottom: 2px solid #f00;  
  border-bottom-color: #f23030;
}

.order-list {
  border-top: 1rpx solid #e5e5e5;  
  margin-top: 30rpx;
}
.order {
  margin-bottom: 20rpx;
  background: #fff;
}
.order-number-time {
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
}
.order-number-time > view {
  padding: 0 20rpx;
  font-size: 26rpx;
  color: #838383;  
}
.order-number-time > view:nth-of-type(2) {
  margin-top: 8rpx;
}
.shou-hou-btn {
  position: absolute;
  right: 20rpx;
  top: 25rpx;
  color: #f23030;
  border: 1px solid #f23030;
  font-size: 26rpx;
  height: 50rpx;
  line-height: 50rpx;
  width: 130rpx;
  text-align: center;
  border-radius: 2px;
} 
.out-of-date {
  position: absolute;
  right: 20rpx;
  top: 25rpx;
  color: #838383;
  border: 1px solid #838383;
  font-size: 26rpx;
  height: 50rpx;
  line-height: 50rpx;
  width: 150rpx;
  text-align: center;
  border-radius: 2px;
}
.tx1 {
  margin-right: 8px;
}
.goods-list {
  padding: 0 20rpx;
}
.goods {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #efefef; 
}
.goods-info{
  display: flex;
  align-items: center;
}
.goods-info > image {
  flex: 0 0 120rpx;
  width: 120rpx;
  height: 120rpx;
}
.goods-info > view {
  flex: 1;
  margin-left: 8px;
}
.goods-name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  line-height: 32rpx;
  max-height: 64rpx;
}
.goods-count {
  margin-top: 4px;
  font-size: 26rpx;
  color: #838383;
}
.goods-count > text {
  margin-left: 6px;
}
.zenmgpin-goods-list {
  padding: 0 20rpx;  
  background: #efefef;
}


.record {
  margin-top: 30rpx;
  background: #fff;
}
.record-number {
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.record-number > view {
  color: #838383;
}
.record-number > view > text {
  margin-right: 10px;
}

.record-goods {
  display: flex;
  padding: 20rpx;
}

.record-goods image {
  flex: 0 0 100rpx;
  width: 100rpx;
  height: 100rpx;
}
.record-goods view {
  margin-left: 8px;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  font-size: 26rpx;
  color: #666;
  line-height: 30rpx;
  max-height: 90rpx;
}
.record-state {
  height: 60rpx;
  font-size: 26rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  position: relative;
  border-top: 1rpx solid #e5e5e5;
}
.record-state > text {
  margin-right: 8px;
  color: #838383;
}
.record-time {
  position: absolute;
  right: 20rpx;
  font-size: 24rpx;
}
.record-time >text {
  margin-right: 4px;
}