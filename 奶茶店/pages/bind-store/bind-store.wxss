page {
  height: 100%;
  background: #f5f5f5;
}
.outer {
  height: 100%;
}
.image-con {
  padding-top: 200rpx;
  padding-bottom: 150rpx;
  display: flex;
  justify-content: center;
}
.image-con image {
  height: 176rpx;
  width: 198rpx;
}
.store-info {
  background: #fff;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #666;
}
.item {
  height: 40px;
  line-height: 40px;
  display: flex;
}
.store-name {
  border-bottom: 2rpx solid #dedede;
}
.item > text {
  width: 100rpx;
  flex: 0 0 100rpx;
}
.item > view {
  flex: 1;
  width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.bind-btn {
  height: 48px;
  display: flex;
  padding: 0 30px;
}
.bind-btn > text {
  margin-top: 30px;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  color: #fff;
  background: #21b11f;
  border-radius: 4px;
  letter-spacing: 2px;
}