.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(90,90, 90, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}
.mask-tip {
  background: #fff;
  width: 620rpx;
  height: 320rpx;
  border-radius: 6px;
}
.mask-title {
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-weight: 600;
}
.mask-content {
  height: 100rpx;
  font-size: 30rpx;
  text-align: center;
  color: #888;
}
.mask-btn {
  height: 100rpx;
  color: #d79f62;
  letter-spacing: 1px;
}