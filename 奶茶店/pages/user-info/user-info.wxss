page {
  background: #f7f7f7;
}

.avatar-wrapper {
  height: 340rpx;
  background: #fff;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
}

.avatar-icon {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  overflow: hidden;
}

.nick-name {
  margin-top: 15px;
  color: #333;
}

.info-wrapper {
  background: #fff;
  padding: 0 40rpx;
}
.info-item {
  height: 100rpx;
  border-bottom: 1rpx solid #eeefff;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}
.info-item:last-child {
  border-bottom: none;
}
.info-tx {
  width: 150rpx;
  flex: 0 0 140rpx;
}
.info-con {
  flex: 1;
}
.info-con-phone {
  position: relative;
}
.info-con-phone > input {
  width: 320rpx;
}
.change-phone-btn,
.bind-phone-btn {
  position: absolute;
  right: 0;
  top: 0;
  width: 140rpx;
  height: 60rpx;
  border-radius: 6rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #ce9c66;
  border: 1rpx solid #c7925a; 
}

.sex-radio {
  margin-right: 8px;
}
.picker-tip {
  color: #aaa;
}
.submit-btn {
  margin-top: 80rpx;
  height: 100rpx;
  padding: 0 40rpx;
}
.submit-btn button {
  color: #fff;
  border: none;
  background: #c29667;  
}
.submit-active {
  background: #c29667;
}
.submit-disbale {
  background: #f0caa1;  
}