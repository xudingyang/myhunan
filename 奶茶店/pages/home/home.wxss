page {
}
.banner-wrapper {
  height: 600rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
swiper {
  width: 640rpx;
  height: 520rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
swiper-item {
  width: 640rpx;
  height: 520rpx;
}
swiper-item image {
  width: 640rpx;
  height: 520rpx;
}
.diandan-btn-con {
  display: flex;
  align-items: center;
  justify-content: center;
}
.diandan-btn {
  height: 80rpx;
  width: 640rpx;
  background: #e69b4c;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 600;
  letter-spacing: 3px;
}
.coupon-btn-con {
  margin-top: 20px;
}
.coupon-btn {
  background: #e69b4c;
  height: 100px;
  width: 100px;
  border-radius: 50%;
  font-size: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  box-shadow: 0px 3px 6px #888;
}

.coupon-btn-con {
  display: flex;
  align-items: center;
  justify-content: center;
}
.coupon-btn-con image {
  width: 640rpx;
  height: 320rpx;
  border-radius: 6rpx;
}

.shou-quan-modal {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .4);
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal-con {
  background: #fff;
  width: 600rpx;
  border-radius: 14rpx 14rpx 6rpx 6rpx;
  overflow: hidden;
}
.modal-title {
  height: 90rpx;
  font-size: 34rpx;
  text-align: center;
  line-height: 90rpx;
}
.modal-text {
  box-sizing: border-box;    
  width: 100%;
  padding: 26rpx 32rpx;
  font-size: 32rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  color: #888;
}
.modal-btn-con {
  height: 90rpx;
}
.modal-btn {
  color: #29b929;
  font-size: 32rpx;
  background: #fff;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal-btn::after {
  border: none;
}