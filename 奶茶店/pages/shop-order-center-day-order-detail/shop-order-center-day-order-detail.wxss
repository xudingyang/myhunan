page {
  background: #f5f5f5;
}
.tabs {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 84rpx;
  display: flex;
  align-items: center;
  background: #faf5f5;  
  border-bottom: 1rpx solid #eee;  
}
.tab {
  flex: 1;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #666;
}
.tab:last-child {
  border-left: 1rpx solid #ddd;
}
.tab-active {
  color: #00a84f;
}
.total-wrapper,
.detail-wrapper {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  padding: 84rpx 0 20rpx 0;
}
.total-wrapper {
  background: #f1f1f1;
}
.total-con {
  padding: 20rpx;
}
.total-item {
  margin-bottom: 26rpx;
  background: #fff;
  border-radius: 6px;
  padding: 20rpx 0;
  box-shadow: 1px 1px 3px #ddd;
}
.total-item:last-child {
  margin-bottom: 0;
}
.total-shop-name {
  font-size: 34rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-weight: 500;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.total-time {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 20rpx;  
  border-bottom: 1px solid #eee;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.total-waimai {
  /* padding-top: 16rpx; */
  padding: 0 20rpx;
  box-sizing: border-box;
}
.total-xianshang-title {
  font-size: 30rpx;
  margin-bottom: 10rpx;
}
.total-xiansahng-wrapper {
  display: flex;
}
.total-xiansahng-zonge {
  font-size: 30rpx;
  flex: 1;
}
.total-xiansahng-zonge > text:nth-of-type(1) {
  margin-right: 6px;
}
.total-xiansahng-shishou {
}
.total-count {
  border-top: 1px solid #eee;
  padding: 20rpx 20rpx 0 20rpx;
}
.total-count > view {
  font-size: 30rpx;
  font-weight: 600;
}
.total-count > view > text:nth-of-type(1) {
  margin-right: 10px;
}
.total-xiansahng-split {
  height: 1px;
  background: #e7e7e7;
  margin: 0 40rpx;
  margin-top: 16rpx;
}


.outer {
  background: #fff;
  padding: 0 20rpx;
}
.order {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 26rpx 0;
  border-bottom: 1rpx solid #eee;
}
.order-lf {
  display: flex;
  align-items: center;
}
.order-lf > image {
  width: 90rpx;
  height: 90rpx;
}
.order-info {
  margin-left: 32rpx;
  font-size: 26rpx;  
}
.shop-name {
  height: 30rpx;
  line-height: 30rpx;
  margin-bottom: 2px;
  font-size: 28rpx;
}
.order-type {
  height: 30rpx;
  line-height: 30rpx;
  margin-bottom: 2px;  
  color: #666;
}
.order-time {
  height: 30rpx;
  line-height: 30rpx;
  color: #aaa;
}
.order-rg {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
}
.order-state {
  font-size: 26rpx;
}
.order-money {
  margin-top: 1px;
  color: #00a84f;
  font-size: 32rpx;
}
.empty {
  width: 100%;
  display: flex;
  justify-content: center;
  padding-top: 150px;
}
.empty-con {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  top: -30px;
}
.empty-con > image {
  width: 484rpx;
  height: 374rpx;
}
.empty-con > text {
  margin-top: 20px;
  font-size: 38rpx;
}