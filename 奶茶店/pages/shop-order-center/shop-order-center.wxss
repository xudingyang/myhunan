page {
  background: #f7f7f7;
}

.avatar-wrapper {
  height: 340rpx;
  background: #fff;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
}

.avatar-icon {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  overflow: hidden;
}

.nick-name {
  margin-top: 15px;
  color: #333;
}
.shop-name {
  margin-top: 20px;
  padding: 0 20rpx;
  font-size: 30rpx;
}
.shop-name > text {
  margin-right: 4px;
}