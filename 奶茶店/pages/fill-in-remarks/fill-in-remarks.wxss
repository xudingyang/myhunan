page {
  background: #f7f7f7;
}
.input-wrapper {
  padding: 30rpx;
  background: #fff;
  position: relative;
}
.letter-count {
  position: absolute;
  bottom: 60rpx;
  right: 60rpx;
  font-size: 28rpx;
  color: #aaa;
}
textarea {
  width: 100%;
  height: 320rpx;
  padding: 16px;
  box-sizing: border-box;
  border-radius: 5px;
  border: 1rpx solid #eee;
  font-size: 28rpx;
}
.words-list {
  background: #fff;
  font-size: 28rpx;
  color: #777;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
}
.words-list-title {
  padding-left: 30rpx;
}
.words-list-items {
  padding: 0 30rpx;
  overflow: hidden;
}
.words-list-items text {
  float: left;
  margin-right: 8px;
  border: 2rpx solid #dfdfdf;
  margin-top: 6px;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  padding: 0 28rpx;
}
.sub-btn {
  margin: 20rpx;
  height: 90rpx;
  color: #fff;
  font-size: 34rpx;
  letter-spacing: 1px;
  background: #e9a76b;
}
button::after {
  border: none;
  border-top: 1rpx solid #ddd;  
}