page {
  background: #f5f5f5;
  padding-bottom: 100rpx;
}
.address-list {
  padding: 20rpx 0 80rpx 0;
}
.address {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  background: #fff;
  height: 126rpx;
  border-bottom: 1rpx solid #eee;
}
.address-info {
  flex: 1;
}
.address-txt {
  margin-bottom: 3px;
  font-size: 28rpx;
}
.name-phone {
  font-size: 26rpx;  
}
.name-phone > text {
  margin-left: 4px;
}
.edit-btn {
  flex:  0 0 110rpx;
  width: 110rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.edit-btn image {
  width: 50rpx;
  height: 50rpx;
}
.tip-tx {
  color: #999;
  font-size: 28rpx;
  padding: 0 20rpx;
  margin: 20rpx 0 15rpx 0;
}
.address-can-not-deliver {
  color: #aaa;
}

.add-btn {
  background: #fff;
  z-index: 99;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  padding: 30rpx 60rpx;
}
.add-txt {
  height: 100%;
  color: #fff;
  background: #d79f62;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 6rpx;
}
.add-txt > image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 8px;
}
.add-txt > text {
  font-size: 36rpx;  
}